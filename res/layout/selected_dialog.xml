<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/glass"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp"
            android:layout_gravity="right"
            android:gravity="right">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center_vertical|right"
                    android:layout_height="fill_parent">
                <LinearLayout
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:id="@+id/currency_layout"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="fill_parent">
                </LinearLayout>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000 toman"
                        android:gravity="right"
                        android:layout_gravity="center_vertical|right"
                        android:id="@+id/amount_text"/>
            </LinearLayout>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="date is here"
                    android:layout_gravity="center_vertical|right"
                    android:id="@+id/date_text"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="account is here"
                    android:layout_gravity="center_vertical|right"
                    android:id="@+id/account_text"/>
        </LinearLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/icon_image"
                android:layout_marginLeft="10dp"
                android:layout_gravity="right"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_alignParentBottom="true" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_gravity="right"
            android:id="@+id/description_text" android:layout_margin="10dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_alignParentBottom="true" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/tags_horiz_layout"
            android:layout_height="wrap_content" android:layout_margin="10dp">
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_alignParentBottom="true" />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center" android:gravity="center">
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="بازگشت"
                android:id="@+id/back_button" android:layout_margin="10dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حذف تراکنش"
                android:id="@+id/delete_button" android:layout_margin="10dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="اصلاح تراکنش"
                android:id="@+id/edit_button" android:layout_margin="10dp"/>
    </LinearLayout>
</LinearLayout>