<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollV"
        >
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:piegraph="com."
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >
        <com.echo.holographlibrary.PieGraph
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/piegraph"
                app:pieInnerCircleRatio="128"
                app:pieSlicePadding="0dip"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/piegraph"
                android:layout_alignTop="@+id/piegraph"
                android:layout_alignRight="@+id/piegraph"
                android:layout_alignBottom="@+id/piegraph"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Hello"
                android:id="@+id/oncentertextView"/>
    </RelativeLayout>

    <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            />

</LinearLayout>
    </ScrollView>