<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout android:layout_weight="1" android:layout_gravity="center"
                  android:layout_width="fill_parent" android:layout_height="fill_parent" android:gravity="center"
                  android:id="@+id/linearLayout">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="10" android:gravity="center">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/barbutton" android:layout_gravity="center" android:padding="10dp"
                    android:layout_margin="10dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/piebutton" android:layout_gravity="center" android:padding="5dp"
                     android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="5" android:layout_gravity="center_vertical"
                android:gravity="center">
            <Button android:layout_width="wrap_content" android:background="@null"
                    android:layout_height="wrap_content" android:text="واریز"
                    android:id="@+id/incomeb" android:layout_gravity="center"
                    android:layout_margin="5dp" android:padding="5dp"/>
            <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:background="@null"
                    android:text="برداشت"
                    android:id="@+id/expenseb" android:layout_gravity="center"
                    android:layout_margin="5dp" android:padding="5dp"/>
        </LinearLayout>
        <!--
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linebutton" android:layout_gravity="center_horizontal"
                android:padding="5dp" android:layout_margin="10dp"/>
        -->

    </LinearLayout>

    <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"

            android:background="@android:color/darker_gray"/>

    <FrameLayout
            android:id="@+id/fragment_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_weight=".15"/>

</LinearLayout>